{% extends 'base.html.twig' %}


{# @var location \App\Entity\Location #}
{# @var weather \App\Entity\Measurement #}

{% block title %}Weather in {{ location.city }}, {{ location.country }}{% endblock %}

{% block body %}
    <main>
        <h1>Weather in {{ location.city }}, {{ location.country }}</h1>

        <ul>
            {% for measurement in measurements %}
                <li>{{ measurement.getMeasurementTime|date('Y-m-d H:i:s')}}: {{ measurement.getCelsius }}&deg;C</li>
            {% endfor %}
        </ul>
    </main>
{% endblock %}